<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FCF5F4"/> <!-- Background color -->
            <corners android:radius="50dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Border -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="5dp" android:color="#F3C851"/> <!-- Border color -->
            <corners android:radius="50dp"/> <!-- Corner radius, same as background -->
        </shape>
    </item>
</layer-list>